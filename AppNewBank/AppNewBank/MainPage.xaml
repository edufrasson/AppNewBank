<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppNewBank.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Welcome to Xamarin.Forms!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Nome do Correntista:" FontSize="Title" Padding="30,10,30,10" TextColor="Blue"/>
        <Entry x:Name="txtNome"/>

        <Label Text="CPF do Correntista:" FontSize="Title" Padding="30,10,30,10"/>
        <Entry x:Name="txtCPF"/>

        <Label Text="Data de Nascimento do Correntista:" FontSize="Title" Padding="30,10,30,10"/>
        <DatePicker x:Name="txtDataNasc"/>

        <Label Text="Senha do Correntista: " FontSize="Title" Padding="30,10,30,10"/>
        <DatePicker x:Name="txtSenha"/>
    </StackLayout>

</ContentPage>
